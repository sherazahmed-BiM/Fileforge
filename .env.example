# FileForge Environment Configuration
# Copy this file to .env and update values as needed

# ==================== Application ====================
APP_NAME=FileForge
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# ==================== API Server ====================
API_HOST=0.0.0.0
API_PORT=19000
ADMIN_API_PORT=19001
CORS_ORIGINS=http://localhost:3000,http://localhost:19000

# ==================== Database (PostgreSQL) ====================
DATABASE_URL=postgresql+asyncpg://fileforge:fileforge@localhost:15433/fileforge
DATABASE_SYNC_URL=postgresql://fileforge:fileforge@localhost:15433/fileforge
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# ==================== Redis ====================
REDIS_URL=redis://localhost:16380/0

# ==================== Celery ====================
CELERY_BROKER_URL=redis://localhost:16380/1
CELERY_RESULT_BACKEND=redis://localhost:16380/2
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# ==================== File Processing ====================
# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600
# Temporary upload directory
UPLOAD_DIR=/tmp/fileforge/uploads
# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.pdf,.docx,.doc,.xlsx,.xls,.pptx,.ppt,.txt,.md,.html,.htm,.csv,.json,.xml,.png,.jpg,.jpeg,.gif,.bmp,.tiff

# ==================== Chunking ====================
# Default chunk size in characters
DEFAULT_CHUNK_SIZE=1000
# Default overlap between chunks
DEFAULT_CHUNK_OVERLAP=100
# Maximum characters before forcing new chunk
MAX_CHUNK_SIZE=2000

# ==================== OCR ====================
# Tesseract OCR languages (comma-separated)
OCR_LANGUAGES=eng
# Enable OCR for images
OCR_ENABLED=true

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_JSON=false

# ==================== Authentication ====================
# Frontend URL for email verification links
FRONTEND_URL=http://localhost:3000

# ==================== Email (SMTP) ====================
# SMTP server configuration for sending verification emails
# Leave SMTP_HOST empty to log emails to console (development mode)
# Example for Gmail: smtp.gmail.com (requires App Password)
# Example for Outlook: smtp.office365.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
# Sender email address (usually same as SMTP_USER)
EMAIL_FROM=
# Use TLS encryption (recommended)
SMTP_USE_TLS=true
